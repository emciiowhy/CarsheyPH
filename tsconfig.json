{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020"],

    "outDir": "dist",
    "rootDir": ".",   // <-- CHANGE THIS BACK

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true,
    "declaration": false
  },

  "include": [
    "src",
    "prisma"
  ],

  "exclude": ["node_modules", "dist"]
}
